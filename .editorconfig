# EditorConfig is a file format for defining coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{json,yml,yaml,html,css,js,md}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{md,rst}]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88
